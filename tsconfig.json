{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  },
  "files": [
    "src/ng2.ts"
  ]
}
