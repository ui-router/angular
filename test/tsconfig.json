{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "lib": [ "es6", "dom" ],
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  },
  "include": ["./**/*.ts"],
  "exclude": ["./ts/**/*"]
}
